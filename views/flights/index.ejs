<%- include('../partials/header') %>

<div class="container">
  <table class="table table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Airline:</th>
        <th>Airport:</th>
        <th>Flight Number:</th>
        <th>Departure Date</th>
        <th>Details</th>
      </tr>
    </thead>
    <tbody>
      <% flights.forEach(function(f) { %>
        <tr>
          <td><%= f.airline %></td>
          <td><%= f.airport %></td>
          <td><%= f.flightNum %></td>
          <td><%= f.departs %></td>
          <td><a href="/flights/<%= f._id %>" class="btn btn-primary">Details</a></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
</div>

<%- include('../partials/footer') %>
