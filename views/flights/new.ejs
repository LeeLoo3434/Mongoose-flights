<%-include('../partials/header')%>

<form action="/flights" method="POST">
    <label>Airport
    <select class="form-select" name="airport">
        <option value="AUS">AUS</option>
        <option value="DFW">DFW</option>
        <option value="DEN">DEN</option>
        <option value="LAX">LAX</option>
        <option value="SAN">SAN</option>
    </select>
    </label><br>
    <label>Airline
    <select class="form-select" name="airline">
        <option value="American">American</option>
        <option value="Southwest">Southwest</option>
        <option value="Alaska Airlines">Alaska Airlines</option>
        <option value="United">United</option>
    </select>
    <label>Flight Number
        <input class="form-control" type="text" name="flightNum">
        </label><br>
        <label for="flight">Departs</label>
        <input class="p-1 border" type="date" name="departs">
        </label><br>
    <button type="submit" value="Add Flight">Add Flight</button>
</form>

